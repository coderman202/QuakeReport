<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/list_item_padding">

    <TextView
        style="@style/MagnitudeStyle"
        android:id="@+id/magnitude"
        tools:text = "8.9"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/location_marginLeft"
        android:layout_marginStart="@dimen/location_marginLeft"
        android:orientation="vertical">

        <TextView
            style="@style/ListItemStyle"
            android:id="@+id/distance"
            android:textColor="@color/textColorEarthquakeDetails"
            android:textSize="@dimen/date_time_text_size"
            android:maxLines="1"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="true"
            tools:text="30km S of"/>

        <TextView
            style="@style/ListItemStyle"
            android:layout_width="match_parent"
            android:id="@+id/location"
            android:textColor="@color/textColorEarthquakeLocation"
            android:maxLines="2"
            tools:text="Long location needs to wrap to 2 lines if possible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/DateTimeStyle"
            android:id="@+id/time"
            tools:text="3:00 PM"/>

        <TextView
            style="@style/DateTimeStyle"
            android:id="@+id/date"
            tools:text="Mar 3, 2010"/>

    </LinearLayout>





</LinearLayout>